<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.todo.api.user.mapper.UserMapper">
   <select id="getUserDetail"
        parameterType="long"
        resultType="com.todo.api.user.dto.response.UserResponseDto">
    SELECT
        id,
        email,
        name
    FROM users
    WHERE id = #{id}
</select>
</mapper>